<Window x:Class="PRAKTIKA1.Adminka"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRAKTIKA1"
        mc:Ignorable="d"
        Title="Adminka" Height="1024" Width="1440">
    <Window.Background>
        <ImageBrush ImageSource="/1440.1024.png"/>
    </Window.Background>

    <Grid Background="White" Margin="150,59,150,90">

        <Button x:Name="Перелётики" Content="Перелётики"
                HorizontalAlignment="Left" Margin="-40,-55,0,0"
                VerticalAlignment="Top" Background="{x:Null}"
                BorderBrush="{x:Null}" Foreground="White"
                FontSize="20" Click="Перелётики_Click"/>

        <ListBox x:Name="CBO"
                 ItemsSource="{Binding autorizes}"
                 Margin="58,88,44,87"
                 Background="{x:Null}"
                 SelectionChanged="CBO_SelectionChanged">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="5" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Логин + Роль -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding Login}" FontSize="18"/>
                                <TextBlock Text="{Binding Role}" FontSize="14" />
                            </StackPanel>

                            <!-- Кнопка Удалить -->
                            <Button Content="Удалить"
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Padding="8,4"
                                    Tag="{Binding}"
                                    Click="DeleteUser_Click"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

        <TextBlock HorizontalAlignment="Left"
                   Margin="508,23,0,0"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   FontSize="32">
            <Run Text="ADMINKA"/>
        </TextBlock>

    </Grid>
</Window>
