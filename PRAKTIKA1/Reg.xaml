<Window x:Class="PRAKTIKA1.Reg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRAKTIKA1"
        mc:Ignorable="d"
        Title="Reg" Height="1000" Width="1440"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/1440.1024.png"/>
        </Grid.Background>

        <Rectangle HorizontalAlignment="Center" Height="750" Stroke="Black" VerticalAlignment="Center" Width="700" Fill="#FFFFA033"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,168,0,0" TextWrapping="Wrap" Text="Авторизация" VerticalAlignment="Top" Foreground="White" FontSize="40"/>

        <!-- ЛОГИН -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,286,0,0" Width="500" Height="50">
            <TextBox x:Name="Логин"
                     TextChanged="Логин_TextChanged"
                     Foreground="Black"
                     Background="White"
                     BorderBrush="{x:Null}"
                     FontSize="24"
                     Padding="10,0,0,0"/>
            <TextBlock x:Name="PlaceholderLogin"
                       Text="Логин"
                       FontSize="24"
                       Foreground="Gray"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       MouseDown="PlaceholderLogin_MouseDown"
                       Cursor="IBeam"/>
        </Grid>

        <!-- ПАРОЛЬ -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,386,0,0" Width="500" Height="50">
            <PasswordBox x:Name="Пароль"
                         PasswordChanged="Пароль_PasswordChanged"
                         FontSize="24"
                         Background="White"
                         BorderBrush="{x:Null}"
                         Padding="10,0,0,0"/>
            <TextBlock x:Name="PlaceholderPassword"
                       Text="Пароль"
                       FontSize="24"
                       Foreground="Gray"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       MouseDown="PlaceholderPassword_MouseDown"
                       Cursor="IBeam"/>
        </Grid>

        <!-- E-MAIL -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,492,0,0" Width="500" Height="50">
            <TextBox x:Name="E_mail"
                     TextChanged="E_mail_TextChanged"
                     Foreground="Black"
                     Background="White"
                     BorderBrush="{x:Null}"
                     FontSize="24"
                     Padding="10,0,0,0"/>
            <TextBlock x:Name="PlaceholderEmail"
                       Text="E-mail"
                       FontSize="24"
                       Foreground="Gray"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       MouseDown="PlaceholderEmail_MouseDown"
                       Cursor="IBeam"/>
        </Grid>

        <Button x:Name="Перелётики" Content="Перелётики" HorizontalAlignment="Left" Margin="141,30,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontSize="20" Click="Перелётики_Click"/>
        <Button x:Name="Уже_есть" Content="Войти в аккаунт" HorizontalAlignment="Left" Margin="748,708,0,0" VerticalAlignment="Top" Background="#FFFF6F07" BorderBrush="{x:Null}" FontSize="24" Width="300" Height="115" Foreground="White"/>
        <Button x:Name="Рег" Content="Авторизоваться" HorizontalAlignment="Left" Margin="394,708,0,0" VerticalAlignment="Top" BorderBrush="{x:Null}" Background="#FFFF6F07" Width="300" Height="115" Foreground="White" FontSize="24" Click="Рег_Click"/>

    </Grid>
</Window>
